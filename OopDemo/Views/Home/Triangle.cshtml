@{
    ViewBag.Title = "OOP Fundamentals";
}
<h2>@ViewBag.Title.</h2>


<h3>@ViewBag.Message</h3>

<hr />
<div class="row">
    <div class="col-xs-6">
        <div>
            <img class="img-responsive" src="~/Images/Triangle.png" />
        </div>
    </div>
    <div class="col-xs-1"></div>
    <div class="col-xs-5">
        <div class="row">
            <div class="label col-xs-4 well" style="color:black; font-size:xx-large">Base</div>
            <div class="col-xs-2 text-center" style="padding-top:15px; font-size:xx-large">
                = @ViewBag.TriangleBase
            </div>
        </div>
        <div class="row">
            <div class="label col-xs-4 well" style="color:black; font-size:xx-large">Height</div>
            <div class="col-xs-2 text-center" style="padding-top:15px; font-size:xx-large">
                = @ViewBag.TriangleHeight
            </div>
        </div>
        <div class="row">
            <div class="label col-xs-4 well" style="color:black; font-size:xx-large">Area</div>
            <div class="col-xs-2 text-center" style="padding-top:15px; font-size:xx-large">
                = @ViewBag.TriangleArea
            </div>
        </div>
    </div>
</div>






